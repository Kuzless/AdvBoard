@using AdvBoard.MVC.Models.ViewModels
@model List<AnnouncementViewModel>

<div class="d-flex flex-wrap gap-3">
	@foreach (var adv in Model)
	{
		<div class="flex-row p-3 border rounded bg-light" style="min-width: 300px; max-width: 48%;">
			<h6 class="fw-bold">@adv.Title </h6>
			<p class="mb-0">
				<span class="fw-bold">Опис:</span> @adv.Description</p>
			<p class="mb-0">
				<span class="fw-bold">Створено:</span> @adv.CreatedAt</p>
			<p class="mb-0">
				<span class="fw-bold">Статус:</span> @adv.Status</p>
			<p class="mb-0">
				<span class="fw-bold">Категорія:</span> @adv.Category</p>
			<p class="mb-0">
				<span class="fw-bold">Підкатегорія:</span> @adv.SubCategory</p>
			<div class="d-flex gap-2">
				<a asp-area="" asp-controller="Announcement" asp-action="Edit" asp-route-id="@adv.Id" class="btn btn-primary w-50">Оновити</a>
				<form asp-action="Delete" asp-controller="Announcement" asp-route-id="@adv.Id" method="post" class="w-50">
					<button type="submit" class="btn btn-danger w-100">Видалити</button>
				</form>
			</div>
		</div>
	}
</div>
<div class="d-flex justify-content-center mt-3">
	<a class="btn btn-primary" asp-area="" asp-controller="Announcement" asp-action="Add" style="width: 200px;">Додати</a>
</div>